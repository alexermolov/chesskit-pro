{
  "name": "chesskit",
  "version": "0.1.0",
  "description": "Шахматное приложение для анализа партий и игры",
  "author": "ChessKit Team",
  "private": true,
  "license": "GPL-3.0-only",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "build:electron": "next build && node scripts/fix-electron-paths.js",
    "start": "next start",
    "lint": "next lint && tsc --noEmit",
    "deploy": "npm run lint && npm run build && cdk deploy",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on --timeout 60000 http://localhost:3000 && electron .\"",
    "electron-build": "npm run build:electron && electron .",
    "dist": "npm run build:electron && electron-builder",
    "dist-all": "npm run build:electron && electron-builder -mwl",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@fontsource/roboto": "^5.1.0",
    "@iconify/react": "^5.1.0",
    "@mui/lab": "^6.0.0-beta.21",
    "@mui/material": "^6.3.0",
    "@mui/x-data-grid": "^7.23.5",
    "@sentry/nextjs": "^8.47.0",
    "@tanstack/react-query": "^5.75.5",
    "chess.js": "^1.2.0",
    "firebase": "^11.1.0",
    "idb": "^8.0.1",
    "jotai": "^2.11.0",
    "next": "15.2.4",
    "react": "18.3.1",
    "react-chessboard": "^4.7.3",
    "react-dom": "18.3.1",
    "recharts": "^2.15.0",
    "tinycolor2": "^1.6.0"
  },
  "devDependencies": {
    "@tanstack/eslint-plugin-query": "^5.74.7",
    "@types/node": "^22.10.2",
    "@types/react": "18.2.11",
    "@types/react-dom": "^18.3.5",
    "@types/tinycolor2": "^1.4.6",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "aws-cdk": "^2.1007.0",
    "aws-cdk-lib": "^2.186.0",
    "concurrently": "^9.2.0",
    "constructs": "^10.0.0",
    "cross-env": "^7.0.3",
    "electron": "^37.2.3",
    "electron-builder": "^26.0.12",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.1.3",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-deprecation": "^3.0.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "typescript": "^5.7.2",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.chesskit.app",
    "productName": "ChessKit",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.games",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "category": "Game"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
